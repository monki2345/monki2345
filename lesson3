  <script>
    let quizAnswered = false;

    function checkAnswer(element, isCorrect) {
      if (quizAnswered) return;
      
      quizAnswered = true;
      const feedback = document.getElementById('quiz-feedback');
      
      if (isCorrect) {
        element.classList.add('correct');
        feedback.className = 'quiz-feedback correct show';
        feedback.innerHTML = '‚úÖ <strong>Correct!</strong> Private text messages leave a much smaller footprint than public posts. They\'re not indexed by search engines and aren\'t visible to the world. Still, be careful ‚Äì screenshots can still be taken!';
      } else {
        element.classList.add('incorrect');
        feedback.className = 'quiz-feedback incorrect show';
        feedback.innerHTML = '‚ùå <strong>Not quite.</strong> Public posts, comments, and photos create large digital footprints that anyone can see and save. Think about what\'s most private. Try again!';
        setTimeout(() => {
          quizAnswered = false;
          element.classList.remove('incorrect');
          feedback.classList.remove('show');
        }, 2500);
      }
    }

    function markComplete() {
      const isChecked = document.getElementById('lesson-complete').checked;
      localStorage.setItem('lesson_footprints', isChecked.toString());
      updateProgress();
    }

    function updateProgress() {
      const lessons = ['passwords', 'scams', 'footprints'];
      let completed = 0;

      lessons.forEach(lesson => {
        if (localStorage.getItem(`lesson_${lesson}`) === 'true') {
          completed++;
        }
      });

      const percent = Math.round((completed / lessons.length) * 100);
      
      document.getElementById('progress-label').textContent = 
        `Your Progress: ${percent}%`;
      
      const fill = document.getElementById('progress-bar-fill');
      fill.style.width = percent + '%';

      const monkey = document.getElementById('progress-monkey');
      const barWidth = document.getElementById('progress-bar-bg').offsetWidth;
      const monkeyX = (percent / 100) * (barWidth - 50);
      monkey.style.left = monkeyX + 'px';
    }

    // Initialize
    if (localStorage.getItem('lesson_footprints') === 'true') {
      document.getElementById('lesson-complete').checked = true;
    }
    updateProgress();
  </script>
